<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_310"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tv_title_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在更新，服务提升，请稍后..."
        android:textSize="@dimen/dimen_16"
        android:textColor="@color/black_333333"
        android:layout_marginTop="@dimen/dimen_34"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_16"
        />
    
    <ProgressBar 
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_20"
        style="?android:attr/progressBarStyleHorizontal"  
        android:progressDrawable="@drawable/progressbar"
        android:progress="0"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginBottom="@dimen/dimen_34"
        >
        <TextView 
            android:id="@+id/tv_current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/gray_666666"
            />
        <TextView 
            android:id="@+id/tv_count_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/gray_666666"
            android:gravity="right"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_36"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/gray_e6e6e6"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/tv_later_besides"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="稍后在说"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/gray_666666"
                android:gravity="center"
                />
            <TextView 
	            android:layout_width="@dimen/dimen_0.5"
	            android:layout_height="match_parent"
	            android:background="@color/gray_e6e6e6"
	            />
            <TextView 
                android:id="@+id/tv_re_download"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="重新下载"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/blue_36b6f3"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
