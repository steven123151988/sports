<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/bind_bankcard_himself"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/gray_cccccc" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:text="@string/whose_bankcard"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/ed_whosebankcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="#cfcfcf"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:text="@string/bankcard_number"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/ed_bankcard_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="19"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="#cfcfcf"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc" />

            <LinearLayout
                android:id="@+id/ll_select_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleType="center"
                    android:text="@string/which_bank"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/plz_select_bank"
                    android:textColor="@color/gray_cccccc"
                    android:textColorHint="#cfcfcf"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc" />


            <RelativeLayout
                android:id="@+id/rl_province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45">


                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="center"
                    android:text="开户地址："
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/tv_address"
                    android:scaleType="center"
                    android:text="省份"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_15" />


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:src="@mipmap/area_down"
                    android:textColor="@color/blue_00ffff" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc" />

            <RelativeLayout
                android:id="@+id/rl_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45">


                <TextView
                    android:id="@+id/tv_address_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="center"
                    android:text="开户地址："
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_15"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/tv_address_1"
                    android:scaleType="center"
                    android:text="市区"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_15" />


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:src="@mipmap/area_down"
                    android:textColor="@color/blue_00ffff" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bindphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="手机号码："
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/tv_bindphone"
                    android:background="@null"
                    android:hint="@string/hint_bindphone"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="@color/gray_cccccc"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:src="@mipmap/personal_phone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >

                <TextView
                    android:id="@+id/tv_rightcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/right_code"
                    android:textColor="@color/white_ffffff"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/ed_rightcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/tv_rightcode"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="6"
                    android:minEms="5"
                    android:padding="@dimen/dimen_10"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="@color/white_ffffff"
                    android:textSize="@dimen/sp_16" />

                <Button
                    android:id="@+id/bt_code"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:background="@drawable/bet_button_small"
                    android:src="@mipmap/personal_phone"
                    android:text="获取"
                    android:textColor="@color/blue_00ffff" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccc" />


            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_40"
                android:background="@drawable/bet_button"
                android:text="@string/make_certain"
                android:textColor="@color/blue_00ffff"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>